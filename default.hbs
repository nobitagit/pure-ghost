<!DOCTYPE html>
<html>
<head>
    {{! Document Settings }}
    <script src="/assets/js/modernizr.js"></script>
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700|Merriweather+Sans:400,700,300,400italic' rel='stylesheet' type='text/css'>
		{{! Page Meta }}
		<title>{{meta_title}}</title>
		<meta name="description" content="{{meta_description}}" />

		{{! Styles }}
		<link rel="stylesheet" type="text/css" href="/assets/css/style.css" />

    {{! Responsive Meta Tags }}
    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>
<body class="{{body_class}} fadeIn">
	<div class="pure-g-r" id="layout">
        <div class="sidebar pure-u">
            <header class="header">
                <a title="{{@blog.title}}" href="{{@blog.url}}">
                    <div class="cubewrap">
                        <div id="cube" class="show-face1">
                          <figure class="face1">Au</figure>
                          <figure class="face2">Re</figure>
                          <figure class="face3">Li</figure>
                          <figure class="face4">o</figure>
                          <figure class="face5">.me</figure>
                          <figure class="face6">.uk</figure>
                        </div>
                    </div>
                </a>

                <h2 class="brand-tagline">{{@blog.description}}</h2>
                <ul class="topics">
                    <li>
                     <a class="post-category post-category-javascript" href="#">javascript</a>                   
                    </li>
                    <li>
                     <a class="post-category post-category-html" href="#">html</a>                   
                    </li>
                    <li>
                     <a class="post-category post-category-design" href="#">design</a>                   
                    </li>
                    <li>
                     <a class="post-category post-category-css" href="#">css</a>                    
                    </li>
                    <li>
                     <a class="post-category post-category-compass" href="#">compass</a>                   
                    </li>
                    <li>
                     <a class="post-category post-category-other" href="#">other</a>                   
                    </li>
                </ul>
            </header>
        </div>
        <main id="main" class="pure-u-1 meat-and-potatoes" role="main">
            <div id="stage" class="content">
            	{{!mind the triple curly braces to escape html inside the body}}
            	{{{body}}}
            </div>
        </main>
	</div>
	{{ghost_foot}}
    <script src="/assets/js/shortscript.js"></script>
</body>
</html>